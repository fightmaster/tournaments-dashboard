<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Fightmaster\Bundle\TeamsBundle\Entity\Team" table="team">
    <change-tracking-policy>DEFERRED_EXPLICIT</change-tracking-policy>
    <id name="id" type="integer" column="id">
      <generator strategy="AUTO"/>
    </id>
    <field name="name" type="string" column="name" length="100"/>
    <field name="slug" type="string" column="slug" length="255"/>
    <lifecycle-callbacks/>
    <many-to-one field="country" target-entity="Fightmaster\Bundle\TeamsBundle\Entity\Country" inversed-by="teams" orphan-removal="true">
        <join-column name="country" nullable="false" referenced-column-name="id" on-delete="CASCADE" on-update="CASCADE"/>
    </many-to-one>
    <unique-constraints>
        <unique-constraint name="team_fk_name" columns="name"/>
        <unique-constraint name="team_fk_slug" columns="slug"/>
    </unique-constraints>
    <indexes>
        <index name="team_slug_idx" columns="slug"/>
        <index name="team_name_idx" columns="name"/>
    </indexes>

    <one-to-many field="players" target-entity="Fightmaster\Bundle\TeamsBundle\Entity\Player" mapped-by="country">
        <cascade>
            <cascade-all/>
        </cascade>
        <order-by>
            <order-by-field name="name" direction="ASC"/>
        </order-by>
    </one-to-many>
  </entity>
</doctrine-mapping>
